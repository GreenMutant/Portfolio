@using Portfolio.Models
@model Portfolio.Models.PeopleViewModel

@{
    ViewData["Title"] = "Index";
}

<br />


<form method="get" action="/People">
    <label></label>
    <input type="text" label="" name="searchString" />
    <input type="submit" value="Search" />
</form>


<br />


<form method="post" action="/People">
    <label></label>
    <div asp-validation-summary=All class="text-danger"> </div>

    <input name="NewName" type="text" placeholder="Name" />
    <input name="NewCity" type="text" placeholder="City" />
    <input name="NewPhone" type="text" placeholder="Phone number" />

    <input type="submit" value="Add" />
</form>

<br />


<table class="table">
    
    <tbody>

        @Html.Partial("_PeopleList", Model.peopleList)

    </tbody>
</table>
