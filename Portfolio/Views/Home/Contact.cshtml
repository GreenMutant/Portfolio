            <div class="row mb-1">
                <div class="col-md-12">
                    <input type="text" name="subject" placeholder="Subject" class="form-control">
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-md-12">
                    <textarea type="text" name="message" rows="10" placeholder="Message" class="form-control md-textarea"></textarea>
                </div>
            </div>
            <input class="btn btn-primary" type="submit" value="Send" />
        </form>             
