@using Portfolio.Models
@model IEnumerable<Country>
@{
    ViewData["Title"] = "Index";
}

<h1>Add Countries</h1>

<a asp-action="Country">Country</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Country</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Country item in Model)
        {
            <tr>
                <td>@item.CountryId</td>
                <td>@item.CountryName</td>
               
                <td><a asp-action="Delete" asp-controller="Country" asp-route-countryId="@item.CountryId">Delete</a></td>
            </tr>
        }
    </tbody>
</table>