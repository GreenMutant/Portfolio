@using Portfolio.Models
@model IEnumerable<Language>
@{
    ViewData["Title"] = "Index";
}

<h1>Add Languages</h1>

<a asp-action="Language">
    <button class="btn btn-primary">
        language
    </button>
</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Language</th>

        </tr>
    </thead>
    <tbody>
        @foreach (Language item in Model)
        {
            <tr>
                <td>@item.LanguageId</td>
                <td>@item.LanguageName</td>
                <td><a asp-action="Delete" asp-controller="Language" asp-route-languageId="@item.LanguageId">Delete</a></td>
            </tr>
        }
    </tbody>
</table>